{
    "name": "aybarsm/laravel-extended-support",
    "description": "Additional mixins for Laravel Macroable Facades and helpers",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "aybarsm",
        "laravel",
        "support",
        "helpers",
        "mixins",
        "macros",
        "extended"
    ],
    "homepage": "https://github.com/aybarsm/laravel-extended-support",
    "authors": [
        {
            "name": "Murat Aybars",
            "email": "hello@aybarsm.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.21.2",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-arch": "^3.0.0",
        "phpstan/phpstan": "^1.12.7",
        "symfony/var-dumper": "^7.2.0"
    },
    "autoload": {
        "psr-4": {
            "Aybarsm\\Laravel\\Support\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aybarsm\\Laravel\\Support\\ExtendedSupportServiceProvider"
            ],
            "aliases": {
                "ExtendedSupport": "Aybarsm\\Laravel\\Support\\Facades\\ExtendedSupport"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
